<% if @error %>
<p> Wrong password or email combination.</p>
<%end%>

<h1>Hi. Please login </h1> 

<form action="/authorize">
  
  <p> Email: <input type="email" placeholder="your email" name="email" value="" required></p>
  <p> Password: <input type="text" pattern=".{5,10}" placeholder="password" name="password" value="" required title="5 to 10 characters"></p>
  <p> <input type="submit" value="submit"></p>
</form>

  